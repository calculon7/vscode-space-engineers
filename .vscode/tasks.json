{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "deploy",
            "type": "shell",
            "command": "${workspaceFolder}/deploy.ps1",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "watch",
            "type": "shell",
            "command": "${workspaceFolder}/watch.ps1",
            "args": [
                "${file}"
            ],
            "group": {
                "kind": "build"
            }
        }
    ]
}